<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewMore">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="3">


            <TextView
                android:id="@+id/txt_rain_chance"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/montserrat"
                android:text="Chance of Rain \n00.00%"
                android:background="@drawable/rounded_corner"/>

            <TextView
                android:id="@+id/txt_cloudiness"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/montserrat"
                android:text="Cloudiness \n00.00%"
                android:background="@drawable/rounded_corner"/>


            <TextView
                android:id="@+id/txt_wind_speed"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/montserrat"
                android:text="Wind Speed \n00.00%"
                android:background="@drawable/rounded_corner"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/txt_pressure"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Pressure \n 1000hPa" />

            <TextView
                android:id="@+id/txt_gnd_level"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Ground Level Pressure \n 1000hPa" />

            <TextView
                android:id="@+id/txt_sea_level"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Sea Level Pressure \n 1000hPa" />

        </LinearLayout>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>